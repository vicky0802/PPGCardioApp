<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.PPGCardioApp" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/cg_primary</item>
        <item name="colorSecondary">@color/cg_secondary</item>
        <item name="colorSurface">@color/cg_surface</item>
        <item name="colorOnSurface">@color/cg_text</item>
        <item name="android:navigationBarColor">@color/cg_surface</item>
        <item name="android:statusBarColor">@color/cg_surface</item>
        <item name="android:windowBackground">@color/cg_surface</item>
        <item name="android:textColorPrimary">@color/cg_text</item>
        <item name="android:textColorSecondary">@color/cg_text_dim</item>
        <item name="android:textColorHint">@color/cg_text_dim</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:buttonStyle">@style/CardioGraceButton</item>
    </style>

    <!-- Per-view card styling applied directly in layouts -->

    <style name="CardioGraceButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.PPGCardioApp" parent="Base.Theme.PPGCardioApp" />
</resources>
